---
import "../styles/global.css";
import Header from "../components/header.astro";
import Layout from "../layouts/Layout.astro";
import Footer from "../components/footer.astro";
import Image4 from "public/image1.jpg";
import Image2 from "public/image2.jpg";
import Image3 from "public/image3.jpg";

const offres = [
    {
        adresse: "2821 Lake Sevilla, Palm Harbor, TX",
        favori: true,
        id: "64l3n8nar836i5j",
        nbChambres: 4,
        nbSdb: 2,
        nomMaison: "Beverly Springfield",
        prix: 2700,
        surface: 45,
        imgUrl: "public/image4.jpg",
    },
    {
        adresse: "2699 Green Valley, Highland Lake",
        favori: true,
        id: "lo831zeg10hpm9y",
        nbChambres: 4,
        nbSdb: 2,
        nomMaison: "Palm Harbor",
        prix: 2095,
        surface: 42,
        imgUrl: "public/image2.jpg",
    },
    {
        adresse: "909 Woodland St, Michigan, IN",
        favori: false,
        id: "s1zuhj19x8eb242",
        nbChambres: 4,
        nbSdb: 3,
        nomMaison: "Faulkner Ave",
        prix: 4550,
        surface: 80,
        imgUrl: "public/image3.jpg",
    },
];
---

<Layout titre="Offres">
    <h1 style="color: rgb(210, 27, 210); margin: 10px">Offres</h1>
    <!-- ou "Offres" pour la page des offres -->
    <h2 style="margin: 10px">
        Découvrez nos offres immobilières. Elles sont pour tout les goûts.
    </h2>
    <div>
        {
            offres.map(
                (offre) => (
                    <ul>
                        <li>{offre.nomMaison}</li>
                        <li>{offre.adresse}</li>
                        <li>Nombre de chambres : {offre.nbChambres}</li>
                        <li>Nombre de salles de bains : {offre.nbSdb}</li>
                        <li>Surface : {offre.surface}</li>
                        <li>{offre.favori ? "★" : "☆"}</li>
                        <li>Prix : {offre.prix}</li>
                        <li>
                            <img src={offre.imgUrl} alt={offre.imgUrl} />
                        </li>
                    </ul>
                ),
                // afficher les nom des maisons sous forme de liste <ul>.
            )
        }
    </div>
</Layout>
<Footer />
